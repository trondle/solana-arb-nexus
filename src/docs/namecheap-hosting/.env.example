
# Server Configuration
NODE_ENV=production
PORT=3000
WEBHOOK_PORT=3001

# Security
WEBHOOK_SECRET=your-super-secure-webhook-secret-here
API_KEY=your-api-key-here

# Google Drive Integration
GOOGLE_PROJECT_ID=your-google-project-id
GOOGLE_PRIVATE_KEY_ID=your-private-key-id
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour-Private-Key-Here\n-----END PRIVATE KEY-----\n"
GOOGLE_CLIENT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_DRIVE_FOLDER_ID=your-google-drive-folder-id

# Email Notifications
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-specific-password
NOTIFICATION_EMAIL=alerts@yourdomain.com

# API Endpoints
MAIN_API_URL=https://your-app.lovable.app/api/live-feed
BACKUP_API_URL_1=https://backup1.yourdomain.com/api
BACKUP_API_URL_2=https://backup2.yourdomain.com/api

# Cache Configuration
CACHE_TTL=300
CACHE_MAX_KEYS=1000

# Rate Limiting
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=api-relay.log
